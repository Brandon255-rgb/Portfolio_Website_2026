      // 3D Skill Card Animation - High-performance RAF implementation
      const skillCards = document.querySelectorAll('.skill-card');
      
      skillCards.forEach(card => {
        let rafId = null;
        let isHovering = false;
        
        // Cache rect on mouseenter to avoid repeated reflows
        let cachedRect = null;
        
        const updateTransform = (x, y) => {
          if (!isHovering) return;
          
          const centerX = cachedRect.width / 2;
          const centerY = cachedRect.height / 2;
          
          // Reduce rotation sensitivity from /10 to /15 for smoother feel
          const rotateX = ((y - cachedRect.top) - centerY) / 15;
          const rotateY = (centerX - (x - cachedRect.left)) / 15;
          
          // Use translate3d for GPU acceleration
          card.style.transform = `translate3d(0, 0, 0) perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.05, 1.05, 1.05)`;
        };
        
        card.addEventListener('mouseenter', () => {
          isHovering = true;
          // Cache rect once on enter
          cachedRect = card.getBoundingClientRect();
          // Promote to composite layer
          card.style.willChange = 'transform';
        });
        
        card.addEventListener('mousemove', (e) => {
          if (rafId) return; // Skip if frame already scheduled
          
          rafId = requestAnimationFrame(() => {
            updateTransform(e.clientX, e.clientY);
            rafId = null;
          });
        });
        
        card.addEventListener('mouseleave', () => {
          isHovering = false;
          if (rafId) {
            cancelAnimationFrame(rafId);
            rafId = null;
          }
          // Reset with GPU-accelerated transform
          card.style.transform = 'translate3d(0, 0, 0) perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
          // Remove will-change after transition completes
          setTimeout(() => {
            card.style.willChange = 'auto';
            cachedRect = null;
          }, 300);
        });
      });

      // Animate skill bars on scroll - Staggered for performance
      const observerOptions = {
        threshold: 0.2,
        rootMargin: '0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const cards = entry.target.querySelectorAll('.skill-card');
            // Stagger animations to reduce layout thrashing
            cards.forEach((card, index) => {
              const fill = card.querySelector('.skill-fill');
              const targetWidth = fill.style.width;
              
              // Use requestAnimationFrame for smoother animation start
              requestAnimationFrame(() => {
                fill.style.width = '0';
                // Stagger by 80ms per card
                setTimeout(() => {
                  fill.style.willChange = 'width';
                  fill.style.transition = 'width 1.2s cubic-bezier(0.4, 0, 0.2, 1)';
                  fill.style.width = targetWidth;
                  
                  // Clean up will-change
                  setTimeout(() => {
                    fill.style.willChange = 'auto';
                  }, 1200);
                }, index * 80);
              });
            });
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      const skillsContainer = document.getElementById('skills-container');
      if (skillsContainer) {
        observer.observe(skillsContainer);
      }
