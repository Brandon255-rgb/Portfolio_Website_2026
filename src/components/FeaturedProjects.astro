<script>
  function initShowMoreButton() {
    const showMoreBtn = document.getElementById('showMoreBtn');
    const hiddenProjects = document.getElementById('hiddenProjects');
    const btnText = document.getElementById('btnText');
    const btnIcon = document.getElementById('btnIcon');
    let isExpanded = false;

    if (showMoreBtn && hiddenProjects) {
      showMoreBtn.addEventListener('click', () => {
        isExpanded = !isExpanded;
        
        if (isExpanded) {
          hiddenProjects.classList.remove('hidden');
          hiddenProjects.classList.add('grid');
          if (btnText) btnText.textContent = 'Show Less Projects';
          if (btnIcon) btnIcon.style.transform = 'rotate(180deg)';
        } else {
          hiddenProjects.classList.add('hidden');
          hiddenProjects.classList.remove('grid');
          if (btnText) btnText.textContent = 'Show More Projects';
          if (btnIcon) btnIcon.style.transform = 'rotate(0deg)';
          
          // Scroll to projects section smoothly
          const projectsSection = document.getElementById('projects');
          if (projectsSection) {
            projectsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initShowMoreButton);
  } else {
    initShowMoreButton();
  }
</script>

