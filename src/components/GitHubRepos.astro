<script>
  function getLanguageColor(language: string): string {
    const colors: Record<string, string> = {
      JavaScript: '#f1e05a',
      TypeScript: '#2b7489',
      Python: '#3572A5',
      Java: '#b07219',
      Go: '#00ADD8',
      Rust: '#dea584',
      Ruby: '#701516',
      PHP: '#4F5D95',
      C: '#555555',
      'C++': '#f34b7d',
      'C#': '#178600',
      Swift: '#ffac45',
      Kotlin: '#F18E33',
      Dart: '#00B4AB',
      Shell: '#89e051',
      HTML: '#e34c26',
      CSS: '#563d7c',
    };
    return colors[language] || '#858585';
  }
  
  let currentIndex = 0;
  const cards = typeof document !== 'undefined' ? document.querySelectorAll('.repo-card') : [];
  const vinyl = typeof document !== 'undefined' ? document.getElementById('vinylRecord') : null;
  const tonearm = typeof document !== 'undefined' ? document.getElementById('tonearm') : null;
  const prevBtn = typeof document !== 'undefined' ? document.getElementById('prevBtn') : null;
  const nextBtn = typeof document !== 'undefined' ? document.getElementById('nextBtn') : null;
  const currentIndexEl = typeof document !== 'undefined' ? document.getElementById('currentIndex') : null;
  
  function updateCards() {
    cards.forEach((card, index) => {
      const el = card as HTMLElement;
      el.style.setProperty('--offset', String(index - currentIndex));
      
      if (index === currentIndex) {
        el.classList.add('active');
        el.style.zIndex = '10';
      } else if (index < currentIndex) {
        el.classList.remove('active');
        el.style.zIndex = String(index);
      } else {
        el.classList.remove('active');
        el.style.zIndex = String(cards.length - index);
      }
    });
    
    // Rotate vinyl
    if (vinyl) {
      const rotation = currentIndex * 30;
      vinyl.style.transform = `rotate(${rotation}deg)`;
    }
    
    // Move tonearm
    if (tonearm) {
      const angle = Math.min(currentIndex * 3, 25);
      tonearm.style.transform = `rotate(${angle}deg)`;
    }
    
    if (currentIndexEl) {
      currentIndexEl.textContent = String(currentIndex + 1);
    }
  }
  
  function nextCard() {
    if (currentIndex < cards.length - 1) {
      currentIndex++;
      updateCards();
    }
  }
  
  function prevCard() {
    if (currentIndex > 0) {
      currentIndex--;
      updateCards();
    }
  }
  
  prevBtn?.addEventListener('click', prevCard);
  nextBtn?.addEventListener('click', nextCard);
  
  // Keyboard navigation
  document.addEventListener('keydown', (e) =&gt; {
    if (e.key === 'ArrowLeft') prevCard();
    if (e.key === 'ArrowRight') nextCard();
  });

  // Touch / swipe support for mobile
  let touchStartX = null;
  let touchDeltaX = 0;
  const cardsContainerEl = typeof document !== 'undefined' ? document.getElementById('cardsContainer') : null;

  cardsContainerEl?.addEventListener('touchstart', (e) =&gt; {
    touchStartX = e.touches[0].clientX;
    touchDeltaX = 0;
  }, { passive: true });

  cardsContainerEl?.addEventListener('touchmove', (e) =&gt; {
    if (touchStartX === null) return;
    touchDeltaX = e.touches[0].clientX - touchStartX;
  }, { passive: true });

  cardsContainerEl?.addEventListener('touchend', () =&gt; {
    if (touchStartX === null) return;
    const threshold = 40; // px
    if (touchDeltaX < -threshold) nextCard();
    else if (touchDeltaX > threshold) prevCard();
    touchStartX = null;
    touchDeltaX = 0;
  });
  
  // Initialize
  updateCards();
</script>

