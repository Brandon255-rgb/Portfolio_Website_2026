<!-- Footer -->
<footer class="py-12 px-4 bg-black/50 border-t border-slate-900 relative overflow-hidden">
  <div class="absolute inset-0 opacity-30">
    <div class="absolute top-0 left-1/4 w-64 h-64 bg-blue-500/10 rounded-full filter blur-3xl"></div>
  </div>
  
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="text-center md:text-left">
        <p class="text-slate-400 text-sm mb-2">
          © {new Date().getFullYear()} Brandon. All rights reserved.
        </p>
        <p class="text-slate-600 text-xs">
          Built with Astro • Deployed on Vercel • Zero bloat, maximum speed
        </p>
      </div>
      
      <div class="flex items-center gap-6">
        <a href="#" class="text-slate-500 hover:text-slate-300 transition-colors text-sm">Privacy</a>
        <a href="#" class="text-slate-500 hover:text-slate-300 transition-colors text-sm">Terms</a>
        <button 
          onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
          class="flex items-center gap-2 text-slate-500 hover:text-white transition-colors text-sm group"
        >
          <span>Back to top</span>
          <svg class="w-4 h-4 group-hover:-translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</footer>

<style>
  .contact-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2.5rem 1.5rem;
    background: linear-gradient(145deg, rgba(30, 41, 59, 0.8), rgba(15, 23, 42, 0.8));
    backdrop-filter: blur(20px);
    border-radius: 1.5rem;
    border: 1px solid rgba(100, 116, 139, 0.2);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }
  
  .contact-card:hover {
    transform: translateY(-8px);
    border-color: rgba(100, 116, 139, 0.4);
  }
  
  .contact-card-glow {
    position: absolute;
    inset: 0;
    /* much more subtle blue glow */
    background: radial-gradient(circle at 50% 50%, rgba(59, 130, 246, 0.04), transparent 65%);
    opacity: 0;
    transition: opacity 0.25s ease, filter 0.25s ease;
    filter: blur(14px);
  }

  .contact-card:hover .contact-card-glow {
    opacity: 0.2; /* minimal visible glow on hover - 20% less */
  }
  
  .contact-icon-wrapper {
    width: 80px;
    height: 80px;
    border-radius: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-width: 1px;
    transition: all 0.4s ease;
  }
  
  .contact-card:hover .contact-icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }
  
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .info-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: linear-gradient(145deg, rgba(30, 41, 59, 0.6), rgba(15, 23, 42, 0.6));
    backdrop-filter: blur(16px);
    border-radius: 1.25rem;
    border: 1px solid rgba(100, 116, 139, 0.2);
    transition: all 0.3s ease;
  }
  
  .info-card:hover {
    transform: translateY(-4px);
    border-color: rgba(100, 116, 139, 0.4);
  }
  
  .info-icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(15, 23, 42, 0.8);
    border-radius: 1rem;
    border: 1px solid rgba(100, 116, 139, 0.2);
  }
  
  .info-label {
    font-size: 0.875rem;
    color: #94a3b8;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }
  
  .info-value {
    font-size: 1.125rem;
    color: #f1f5f9;
    font-weight: 700;
  }
  
  @media (max-width: 640px) {
    .contact-card {
      padding: 2rem 1rem;
    }
    
    .contact-icon-wrapper {
      width: 64px;
      height: 64px;
    }
    
    .info-grid {
      grid-template-columns: 1fr;
    }
  }
</style>