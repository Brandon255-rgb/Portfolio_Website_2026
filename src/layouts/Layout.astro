---
import '../styles/global.css';
import PageLoader from '../components/PageLoader.astro';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, user-scalable=yes, maximum-scale=5" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<meta name="theme-color" content="#0f172a" />
		<meta name="format-detection" content="telephone=no" />
		
		<!-- Performance: Resource Hints -->
		<link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
		<link rel="preconnect" href="https://cdn.simpleicons.org" crossorigin />
		<link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
		<link rel="dns-prefetch" href="https://cdn.simpleicons.org" />
		
		<!-- Performance: Reduce render-blocking -->
		<style>
			/* Critical CSS - Above the fold */
			body{margin:0;background:linear-gradient(180deg, #1a1f2e 0%, #0f1419 25%, #0a0e1a 50%, #0f0f1f 75%, #0f172a 100%);color:#f1f5f9;font-family:system-ui,-apple-system,sans-serif;min-height:100vh}
			*{box-sizing:border-box}
		</style>
		
		<slot name="head" />
	</head>
	<body class="min-h-screen text-slate-100 relative overflow-x-hidden" style="background: linear-gradient(180deg, #1a1f2e 0%, #0f1419 25%, #0a0e1a 50%, #0f0f1f 75%, #0f172a 100%);">
		<!-- Background accent elements -->
		<div class="fixed inset-0 pointer-events-none overflow-hidden">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-600/5 rounded-full blur-3xl"></div>
			<div class="absolute bottom-0 left-0 w-96 h-96 bg-slate-700/3 rounded-full blur-3xl"></div>
			<div class="absolute top-1/2 right-1/4 w-64 h-64 bg-slate-600/2 rounded-full blur-3xl"></div>
		</div>
		<PageLoader />
		<div class="relative z-10">
			<slot />
		</div>
		<script src="https://unpkg.com/@dotlottie/player-component"></script>
	</body>
</html>